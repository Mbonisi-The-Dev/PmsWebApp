@model IEnumerable<PmsWebApi.Models.Maintenance>

@{
    ViewData["Title"] = "Index";
}

<h1>View All Maintenance Logs </h1>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                @Html.ActionLink("Create Maintenance Log", "Create", new { @*IdNumber => item.IdNumber*@})
            </div>
                <div class="x_content">
                    <table class="table">
                        <tr>
                            <th> Log Id</th>
                            <th> Id Number </th>
                            <th> Log Date</th>
                            <th> CallStatus </th>                   
                            <th> CallDescription</th>
                        </tr>
                        <tbody>                         
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LogId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LogDate, "{0:yyyy/MM/dd}",new { htmlAttributes = new { type = "date" } })
                                    </td>                                 
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CallStatus)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CallDescription)
                                    </td>


                                    <td>
                                        <button class="btn btn-group-lg pms-btn">
                                            @Html.ActionLink("Edit Log", "Edit", new { LogId = item.LogId })
                                        </button>                                           
                                    </td>
                                    <td>
                                        <button class="btn btn-group-lg pms-btn">
                                            @Html.ActionLink("View Log", "Details", new { LogId = item.LogId })
                                        </button>                                       
                                    </td>
                                    <td>
                                        <button class="btn btn-group-lg pms-btn">
                                            @Html.ActionLink("Delete Log", "Delete", new { LogId = item.LogId })
                                        </button>                                       
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                 </div>
            </div>
        </div>
</div>

