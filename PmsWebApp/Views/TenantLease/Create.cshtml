@model PmsWebApi.Models.TenantLease
@{
    ViewData["Title"] = "Create";
}



<h1> Create New Lease Agreement </h1>

<h3> Lease Agreement For: </h3>  @Html.DisplayFor(Model => Model.IdNumber)

<br />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table">
        <thead></thead>
        <tbody>

            <tr>
                <td> Id Number </td>
                <td>
                    @Html.EditorFor(m => m.IdNumber, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>

            <tr>
                <td> Unit Number</td>
                <td>
                    @Html.EditorFor(m => m.UnitNumber, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>

            <tr>
                <td> Lease Number</td>
                <td>
                    @Html.EditorFor(m => m.LeaseNumber, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>

            <tr>
                <td> Rental </td>
                <td>
                    @Html.EditorFor(m => m.Rental, new { htmlAttributes = new { @class = "form-control", type = "tel" } })
                </td>
            </tr>

            <tr>
                <td> Vehicle Registration </td>
                <td>
                    @Html.EditorFor(m => m.VehicleReg, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>

            <tr>
                <td> Vehicle Registration 2 </td>
                <td>
                    @Html.EditorFor(m => m.VehicleReg2, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>

            <tr>
                <td>Stat Approval </td>
                <td>
                    @Html.EditorFor(m => m.StatusApproval, new { htmlAttributes = new { @class = "form-control" } })
                </td>
            </tr>

            <tr>
                <td> Start Date </td>
                <td>

                    @Html.TextBoxFor(m => m.StartDate, "{0:yyyy/MM/dd}",new { htmlAttributes = new { @class = "form-control date-picker", type = "date" } })
                </td>
            </tr>

            <tr>
                <td> End Date </td>
                <td>
                    @Html.TextBoxFor(m => m.EndDate, "{0:yyyy/MM/dd}", 
                   new { htmlAttributes = new { @class = "form-control date-picker", type = "date"   } })
                </td>
            </tr>

        </tbody>
    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">

            <input type="submit" value="Create" class="btn btn-primary btn-group-lg" />


        </div>
    </div>
}








