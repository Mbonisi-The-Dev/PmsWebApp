@model IEnumerable<PmsWebApi.Models.Tenant>

@{
    ViewData["Title"] = "Index";
}

<h1> View All Tenants Dashboard</h1>

<div>
    <button class="btn btn-group-lg pms-btn">
        @Html.ActionLink("Create New Tenant Profile", "Create", new { /*UserId = item.UserId */})
    </button>
</div>

<div class="x_content">
    <table class="table">
        <thead>

        </thead>
        <tbody>
            <tr>
                <th>  First Name    </th>
                <th>  Last Name  </th>
                <th>  Cellphone Number  </th>
                <th>  Id Number   </th>
                <th>     </th>
                <th>     </th>
                <th>     </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CellphoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdNumber)
                    </td>

                    <td>
                        <button class="btn btn-group-lg pms-btn">
                            @Html.ActionLink("Edit", "Edit", new { UserId = item.UserId })
                        </button>

                    </td>
                    <td>
                        <button class="btn btn-group-lg pms-btn">
                            @Html.ActionLink("Details", "Details", new { UserId = item.UserId })
                        </button>

                    </td>
                    <td>
                        <button class="btn btn-warning">
                            @Html.ActionLink("Delete", "Delete", new { UserId = item.UserId })
                        </button>

                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>

