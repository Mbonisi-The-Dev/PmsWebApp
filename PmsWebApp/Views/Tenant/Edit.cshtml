@model PmsWebApi.Models.Tenant
@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h1> Edit @Html.DisplayFor(m => m.FirstName)'s profile </h1>
            
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                @using (Html.BeginForm())
                {

                    @Html.AntiForgeryToken()
                    <table class="table">
                        <thead></thead>
                        <tbody>
                            @*<tr>
                            <td> User Id </td>
                            <td>
                                @Html.DisplayFor(m => m.UserId, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>*@

                            <tr>
                                <td> FirstName </td>
                                <td>
                                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                            </tr>

                            <tr>
                                <td> LastName: </td>
                                <td>
                                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                            </tr>

                            <tr>
                                <td> Cellphone Number: </td>
                                <td>
                                    @Html.EditorFor(m => m.CellphoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                            </tr>

                            <tr>
                                <td> Id Number </td>
                                <td>
                                    @Html.EditorFor(m => m.IdNumber, new { htmlAttributes = new { @class = "form-control" } })
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Update " class="btn btn-primary btn-group-lg" />
                        </div>
                    </div>
                }




            </div>
        </div>
    </div>
</div>
  


