@model PmsWebApi.Models.Users

@{
    ViewData["Title"] = "Edit";
}

    <h1>Edit User Role for: @Html.DisplayFor(m => m.UserName) </h1>

@{
    ViewData["Title"] = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


<div class="row">
    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table>
                    <thead></thead>
                    <tbody>
                        <tr>
                           
                            <td>
                                @Html.HiddenFor(m => m.UserId, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>
                        <tr>                            
                            <td>
                                @Html.HiddenFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>

                        <tr>
                            <td> Username </td>
                            <td>
                                @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>

                        <tr>
                            <td> Email: </td>
                            <td>
                                @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>

                        <tr>
                            <td>  User Role </td>
                            <td>
                                @Html.EditorFor(m => m.UserRole, new { htmlAttributes = new { @class = "form-control" } })
                            </td>
                        </tr>

                    </tbody>
                </table>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Update " class="btn btn-primary btn-group-lg" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
     }

